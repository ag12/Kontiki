<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/close_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dip"
        android:contentDescription="@string/imageViewBook"
        android:src="@drawable/close" />

    <ImageView
        android:id="@+id/buy_imageView"
        android:layout_width="153dip"
        android:layout_marginLeft="5dip"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/imageViewBook"
        android:src="@drawable/buy_book" />

    <ImageView
        android:id="@+id/discuss_pop_imageView"
        android:layout_width="151dip"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/imageViewBook"
        android:src="@drawable/discuss_pop" />

</RelativeLayout>