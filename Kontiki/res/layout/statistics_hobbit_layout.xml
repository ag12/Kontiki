<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/tab_statistics_hobbit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/statistics_frame"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/statistics_hobbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/imageViewBook"
            android:paddingTop="30dp"
            android:src="@drawable/statistics_hobbit" />

        <ImageView
            android:id="@+id/statistics_hobbit_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/statistics_hobbit"
            android:layout_marginRight="25dp"
            android:layout_marginTop="76dp"
            android:contentDescription="@string/imageViewBook"
            android:paddingBottom="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/statistics_share_stats" />

        <ImageView
            android:id="@+id/statistics_hobbit_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/statistics_hobbit_back"
            android:layout_marginLeft="30dp"
            android:contentDescription="@string/imageViewBook"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:src="@drawable/statistics_back" />

    </RelativeLayout>

</LinearLayout>